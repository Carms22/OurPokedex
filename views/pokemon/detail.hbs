<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{pokemon.image}}" class="img-fluid rounded-start" alt="{{pokemon.name}} image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{pokemon.name}}</h5>
        <h6 class="card-title"><i>{{pokemon.status}}</i></h6>
        <p class="card-text">{{pokemon.description}}</p>
        <p class="card-text"><small class="text-muted">Profile: {{pokemon.profile}}</small></p>
      </div>
    </div>
  </div>
</div>