  <script>
  function tooglePassword() {
    const inputNode = document.getElementById("password-input");
    const iconNode = document.getElementById("password-icon");

    if(inputNode) {  
      if (inputNode.type === "password") {
        inputNode.type = "text";
        iconNode.classList.add("fa-eye");
        iconNode.classList.remove("fa-eye-slash");
      } else {
        inputNode.type = "password";
        iconNode.classList.remove("fa-eye");
        iconNode.classList.add("fa-eye-slash");
      }
    }
  }

  document.querySelector('.password-toggle')?.addEventListener('click', tooglePassword);
</script>
</body>
