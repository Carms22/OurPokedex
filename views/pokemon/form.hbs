<div class="row justify-content-center mt-4">
  <div class="col col-sm-8 col-md-6 col-lg-4">
    <h1 class="my-4">Create new Pok√©mon</h1>
    <form action="/pokemon/create" method="post" class="" enctype="multipart/form-data">
      <div class="input-group mb-2">
        <input
          type="text"
          name="name"
          class="custom-form-control form-control py-2 ps-4 {{#if error}}is-invalid{{/if}}"
          placeholder="Name"
          aria-label="Name"
          value="{{ pokemon.name }}"
        >
        {{#if error}}<div class="text-danger text-center mb-2">{{ error }}</div>{{/if}}
      </div>
      <div class="input-group mb-2">
        <select
          name="status"
          class="custom-form-control form-control py-2 ps-4 {{#if error}}is-invalid{{/if}}"
          placeholder="Status"
          aria-label="Status"
          value="{{ pokemon.status }}"
        >
         <option value="Teacher Almighty">Teacher Almighty</option>
         <option value="Your Highness TA">Your Highness TA</option>
         <option value="Peasant Student" selected>Peasant Student</option>
        </select>
        {{#if error}}<div class="text-danger text-center mb-2">{{ error }}</div>{{/if}}
      </div>
      <div class="input-group mb-2">
        <input
          type="text"
          name="description"
          class="custom-form-control form-control py-2 ps-4 {{#if error}}is-invalid{{/if}}"
          placeholder="Description"
          aria-label="description"
          value="{{ pokemon.description }}"
        >
        {{#if error}}<div class="text-danger text-center mb-2">{{ error }}</div>{{/if}}
      </div>
      <div class="input-group mb-2">
        <select
          name="profile"
          class="custom-form-control form-control py-2 ps-4 {{#if error}}is-invalid{{/if}}"
          placeholder="Select Profile"
          aria-label="Profile"
          value="{{ pokemon.profile }}"
        >
         <option value="Technical" selected>Technical</option>
         <option value="Artistic">Artistic</option>
         <option value="Marketing">Marketing</option>
         <option value="Healthcare">Healthcare</option>
         <option value="Entrepreneur">Entrepreneur</option>
        </select>
        {{#if error}}<div class="text-danger text-center mb-2">{{ error }}</div>{{/if}}
      </div>
      <div class="input-group mb-2">
        <input
          type="file"
          name="image"
          class="form-control-file"
        >
        {{#if error}}<div class="text-danger text-center mb-2">{{ error }}</div>{{/if}}
      </div>
      <div class="input-group mb-2">
        <button type="submit" class="btn btn-primary bg-light-green border-0">Create</button>
      </div>
    </form>
  </div>
</div>